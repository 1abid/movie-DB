<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <application.db.movie.com.moviedb.views.SelectableRoundedImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="1.25"
            app:vutka_border_color="#00606B"
            app:vutka_left_bottom_corner_radius="0dip"
            app:vutka_left_top_corner_radius="0dip"
            app:vutka_right_bottom_corner_radius="0dip"
            app:vutka_right_top_corner_radius="0dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#90000000">

            <TextView
                android:id="@+id/movie_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:text="La La land"
                android:textSize="12sp"
                android:textColor="@color/primary_light"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/release_tv_ic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_event" />

                    <TextView
                        android:id="@+id/release_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/release_tv_ic"
                        android:padding="5dp"
                        android:text="2017-02-01"
                        android:textSize="11sp"
                        android:textColor="@color/primary_light" />
                </RelativeLayout>

                <!--<RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/total_time_tv_ic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_access_time" />

                    <TextView
                        android:id="@+id/total_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/total_time_tv_ic"
                        android:padding="5dp"
                        android:text="127m"
                        android:textSize="11sp"
                        android:textColor="@color/primary_light" />
                </RelativeLayout>-->


            </LinearLayout>

            <TextView
                android:id="@+id/movie_genere_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@+id/total_time_tv_ic"
                android:padding="3dp"
                android:text="romance , drama"
                android:textSize="11sp"
                android:textColor="@color/primary_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/vote_avg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="9.8"
                android:textSize="14sp"
                android:textColor="@color/primary_light" />

        </LinearLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>
